<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerCl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/current_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16.68dp"
    android:layout_marginVertical="6.5dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dayCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CE6866"
        app:cardCornerRadius="24dp"
        android:layout_marginStart="14.32dp"
        android:layout_marginTop="22sp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/dayNumberTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Day 1"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingHorizontal="11dp"
            android:paddingVertical="5dp"/>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/descTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@tools:sample/lorem/random"
        android:maxLines="1"
        app:layout_constrainedWidth="true"
        android:paddingHorizontal="16dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:autoSizeTextType="uniform"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/dayCard"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>